<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RulerView">
        <attr name="ruler_max_value" format="integer" />
        <attr name="ruler_initial_value" format="integer" />
        <attr name="ruler_hash_mark_interval" format="integer"/>
        <attr name="ruler_hash_mark_distance" format="dimension"/>
        <attr name="ruler_long_hash_mark_width" format="dimension"/>
        <attr name="ruler_long_hash_mark_height" format="dimension"/>
        <attr name="ruler_long_hash_mark_text_size" format="dimension"/>
        <attr name="ruler_long_hash_mark_text_color" format="color"/>
        <attr name="ruler_long_hash_mark_text_visible" format="boolean"/>
        <attr name="ruler_long_hash_mark_color" format="color"/>
        <attr name="ruler_long_hash_mark_text_margin_top" format="dimension"/>
        <attr name="ruler_small_hash_mark_width" format="dimension"/>
        <attr name="ruler_small_hash_mark_height" format="dimension"/>
        <attr name="ruler_small_hash_mark_color" format="color"/>
        <attr name="ruler_indicator_height" format="dimension"/>
        <attr name="ruler_indicator_width" format="dimension"/>
        <attr name="ruler_indicator_color" format="color"/>
        <attr name="ruler_hash_mark_gravity" format="enum">
            <enum name="top" value="0"/>
            <enum name="center" value="1"/>
            <enum name="bottom" value="2"/>
        </attr>
    </declare-styleable>
</resources>